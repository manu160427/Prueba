import java.io.File;
import java.util.Scanner;


public class Menu {
	public static boolean registarse(String nombre, int contraseña){
		boolean registro=false;
		
		
				
	    return registro;	
	}
	
	
	public static boolean acceder(File f){
		boolean acceder=false;
		
		return acceder;
	}
	
	public static boolean acceder(String nombre, int contraseña){
		boolean acceder=false;
		
		return acceder;
	}

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
        String nombre= null;
        int contraseña=0;
		int seleccion= -1;
		
		//creamos un fichero 
		File file3 = new File("hola");
		acceder(file3);
		
	    while(seleccion!=0){
	    	
	    	//Try catch para evitar que el programa termine si hay un error
			try{
				System.out.println("Elige opción:\n1.- Registrarse" +
						"\n2.- Acceder\n"+
						"0.- Salir");
				//Recoger una variable por consola
				seleccion = Integer.parseInt(sc.nextLine()); 
				
				if(seleccion==1){
					System.out.println("introduce un nombre");
					nombre=sc.nextLine();
					
					System.out.println("introduce una contraseña");
					contraseña=sc.nextInt();
					
					boolean registro=registarse("nombre",contraseña);
				}
				else if(seleccion==2){
					boolean acceder=acceder("nombre",contraseña);
				}
			
			}
			catch(Exception e){
				System.out.println("ha ocurrido un error");
				
			}
	    }
		
	}

	    
	

}
