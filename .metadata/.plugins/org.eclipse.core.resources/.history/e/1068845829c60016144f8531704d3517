import java.util.Scanner;

  
		public class PalabrasYLetras {
			
			private String palabra;
			private String  letra;
		
			
		
			public String getPalabra() {
				return palabra;
			}
		
			public void setPalabra(String palabra) {
				this.palabra = palabra;
			}
		
			public String getLetra() {
				return letra;
			}
		
			public void setLetra(String letra) {
				this.letra = letra;
	    }


			public static char pedirLetra(){
		   	
			    char letra ;
			    Scanner sc = null;
		   		   
			   sc = new Scanner(System.in);
			   letra = sc.next().charAt(0);
			   
			   return letra;
			   
		    }
			
			public static boolean esta(char letra, String palabra){
				boolean b_dev=false;
				int contador=0;
				
				
				
				
			    while (contador <palabra.length() ){
			    	
			    	if(letra==palabra.charAt(contador)){
			    		
			    		b_dev=true;
			    		
			    	}
			    	
			    	
			    	contador++;
			    	
			    	
			    }
			    
			    
				
				return b_dev;
				
			}


			
			public static String pedirPalabra(){
			String palabra;
			Scanner sc = null;
		
				sc = new Scanner (System.in);
				palabra= sc.nextLine();
			  
			return palabra;
			}
	
	
			public static void main(String[] args) {
				
				String palabra = null;
				char letra=0;
						
				
					System.out.print("Introduzca su palabra: ");
				    palabra= pedirPalabra();
				    System.out.println("Introduzca su letra");
				    letra = pedirLetra();
				    
				   
					boolean cadena = esta(letra,palabra);
					
					if(cadena==true){
						System.out.println("la letra esta en la palabra " +palabra);
						
					
					}
					else{
						
						System.out.println("la letra no esta en la palabra");
					}
				
				
				
				
				
				
				
				
	
	
	
			}
}
